<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/player_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_football_leader_man"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/player_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lionel Messi" />

    <TextView
        android:id="@+id/player_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/player_name"
        app:layout_constraintTop_toBottomOf="@id/player_name"
        tools:text="Attaque" />

    <TextView
        android:id="@+id/player_born_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/player_name"
        app:layout_constraintTop_toBottomOf="@id/player_position"
        tools:text="21/07/1988" />

    <TextView
        android:id="@+id/player_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/player_name"
        app:layout_constraintTop_toBottomOf="@id/player_born_date"
        tools:text="500 millions" />

</android.support.constraint.ConstraintLayout>